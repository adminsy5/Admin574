<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⭐ Activity Demo ⭐"
        android:textSize="22dp"
        android:id="@+id/text1"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="8dp">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:id="@+id/b1"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Custom CheckBox"
        android:textSize="16dp"
        android:backgroundTint="@color/black"
        android:textColor="#FFEB3B">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b1"
        android:id="@+id/b2"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Custom radio button"
        android:textSize="16dp"
        android:backgroundTint="#00B6FF"
        android:textColor="#FFFCFD">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b2"
        android:id="@+id/b3"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Spinner Demo"
        android:textSize="16dp"
        android:backgroundTint="#F407E9"
        android:textColor="#000000">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b3"
        android:id="@+id/b4"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Implicit Intent"
        android:textSize="16dp"
        android:backgroundTint="#FA4B82"
        android:textColor="#F4E5E5">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b4"
        android:id="@+id/b5"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Explicit Intent"
        android:textSize="16dp"
        android:backgroundTint="#CA95A6"
        android:textColor="#151010">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b5"
        android:id="@+id/b6"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Custom listview / AlertBox"
        android:textSize="16dp"
        android:backgroundTint="#FFE8EF"
        android:textColor="#4FC5BB">
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b6"
        android:id="@+id/b7"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Processor ListView"
        android:textSize="16dp"
        android:backgroundTint="#39F12C"
        android:textColor="#A43DEC">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b7"
        android:id="@+id/b8"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text=" Date-PickerDemo "
        android:textSize="16dp"
        android:backgroundTint="#E687F6"
        android:textColor="#EFEFEF">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b8"
        android:id="@+id/b9"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Time-PickerDemo "
        android:textSize="16dp"
        android:backgroundTint="#190C1B"
        android:textColor="#DF8989">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b9"
        android:id="@+id/b10"
        android:onClick="onClick"
        android:layout_centerHorizontal="true"
        android:text="Progress Bar Demo "
        android:textSize="16dp"
        android:backgroundTint="#5F3266"
        android:textColor="#D1C1C1">
    </Button>

</RelativeLayout>